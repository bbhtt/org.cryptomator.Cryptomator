{
  "app-id": "org.cryptomator.Cryptomator",
  "command": "cryptomator",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions" : [
    "org.freedesktop.Sdk.Extension.openjdk17"
  ],
  "separate-locales": false,
  "finish-args": [
    "--device=dri",
    "--env=PATH=/app/bin/:/app/jre/bin/:/usr/bin/",
    "--filesystem=host",
    "--share=ipc",
    "--share=network",
    "--socket=session-bus",
    "--socket=x11",
    "--talk-name=org.freedesktop.Flatpak",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets",
    "--talk-name=org.gtk.vfs.*",
    "--talk-name=org.gtk.vfs"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig"
  ],
  "modules": [
    {
      "name": "libfuse",
      "config-opts": [
        "MOUNT_FUSE_PATH=/app/bin"
      ],
      "post-install": [
        "install fusermount-wrapper.sh /app/bin/fusermount"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/libfuse/libfuse/releases/download/fuse-2.9.9/fuse-2.9.9.tar.gz",
          "sha256": "d0e69d5d608cc22ff4843791ad097f554dd32540ddc9bed7638cc6fea7c1b4b5"
        },
        {
          "type": "file",
          "path": "build-aux/fusermount-wrapper.sh"
        }
      ]
    },
    {
      "name": "openjdk",
      "buildsystem": "simple",
      "build-commands": ["/usr/lib/sdk/openjdk17/install.sh"]
    },
    {
      "name": "cryptomator",
      "buildsystem": "simple",
      "build-options": {
        "env": {
            "PATH": "/app/bin:/usr/bin:/usr/lib/sdk/openjdk17/bin",
            "MAVEN_OPTS": "-Dmaven.repo.local=.m2/repository",
            "JAVA_HOME": "/usr/lib/sdk/openjdk17/jvm/openjdk-17"
        }
      },
      "build-commands": [
        "mkdir -p /app/Cryptomator",
        "tar xzf 1.6.5.tar.gz -C /app/Cryptomator",
        "mvn clean package --file=/app/Cryptomator/cryptomator-1.6.5/pom.xml -DskipTests -Plinux"
      ],
      "sources": [
        {
          "type": "file",
          "path": "cryptomator.sh"
        },
        {
          "type": "file",
          "path": "org.cryptomator.Cryptomator.appdata.xml"
        },
        {
          "type": "file",
          "path": "org.cryptomator.Cryptomator.desktop"
        },
        {
          "type": "file",
          "path": "org.cryptomator.Cryptomator.svg"
        },
        {
          "type": "file",
          "sha256": "1e5fb91f9f61cd63f9319b0d0adc7b5d04685679b6614306c9c11fe4384b8742",
          "url": "https://github.com/cryptomator/cryptomator/archive/refs/tags/1.6.5.tar.gz"
        }
      ]
    }
  ]
}